<h1>List of tasks:</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= task.completed ? '✅' : '❌' %>
      | <%= link_to task.title, task_path(task) %>
      | <%= link_to '✏️', edit_task_path(task) %>
      | <%= link_to '🗑', task_path(task), method: :delete, data: { confirm: 'Are you sure?' } %>
   </li>
  <% end %>
</ul>

<%= link_to 'Add task', tasks_new_path %>
